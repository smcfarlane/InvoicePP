<fieldset class="col-md-9">
  <div class="row">
    <fieldset class="col-md-6">
      <legend>Vendor Information</legend>
      <div class="form-group">
        <label for="name">Company Name</label>
        <input type="text" id="name" name="name" class="form-control" value="<%= @vendor.detail.name if @vendor %>" required/>
      </div>
      <div class="form-group">
        <label for="contact">Company Contact Person</label>
        <input type="text" id="contact" name="contact" class="form-control" value="<%= @vendor.detail.contact if @vendor %>" required/>
      </div>
      <div class="form-group">
        <label for="title">Title of Contact Person</label>
        <input type="text" id="title" name="title" class="form-control" value="<%= @vendor.detail.title if @vendor %>" required/>
      </div>
    </fieldset>
    <fieldset class="col-md-6">
      <legend>Address</legend>
      <div class="form-group">
        <label for="street">Street Address</label>
        <input type="text" id="street" name="street" class="form-control" value="<%= @vendor.detail.street_address if @vendor %>" required/>
      </div>
      <div class="inline-form">
        <div class="form-group">
          <label for="city">City</label>
          <input type="text" id="city" name="city" class="form-control" value="<%= @vendor.detail.city if @vendor %>" required/>
        </div>
        <div class="form-group">
          <label for="state">State</label>
          <input type="text" id="state" name="state" class="form-control" value="<%= @vendor.detail.state if @vendor %>" required mmaxlength="2"/>
        </div>
        <div class="form-group">
          <label for="zip">Zip</label>
          <input type="text" id="zip" name="zip" class="form-control" value="<%= @vendor.detail.zip if @vendor %>" required/>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="row">

    <fieldset class="col-md-6">
      <legend>Contact Information</legend>
      <div class="form-group">
        <label for="email">Contact Person Email</label>
        <input type="email" id="email" name="email" class="form-control" value="<%= @vendor.detail.email if @vendor %>" required/>
      </div>
      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="tel" id="phone" name="phone" class="form-control" value="<%= @vendor.detail.phone_number if @vendor %>" required/>
      </div>
    </fieldset>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</fieldset>