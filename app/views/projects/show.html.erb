<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3><%= @project.name -%></h3><h4><%= @project.identifier -%></h4>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Details</h4>
        </div>
        <div class="panel-body">
          <%= @project.details -%>
        </div>
        <div class="panel-footer">
          <div class="btn-group">
            <%= link_to "Edit Details", client_project_path(@client, @project), class: "btn btn-default" -%>
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#project-delete-modal">Delete Project</button>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>invoices</h4>
        </div>
        <div class="panel-body">
          <ul class="list-group">
            <%- @project.client_invoices.each do |i| -%>
              <li class="list-group-item">
                <p>Invoice: <%= i.id -%></p>
                <p>Total: <%= i.total -%></p>
                <p>Paid: <%= i.paid ? "Yes" : "No" -%></p>
              </li>
            <%- end -%>
          </ul>
        </div>
        <div class="panel-footer">

        </div>
      </div>
    </div>
  </div>
</div>
<%=render "delete_modal" %>